<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="500dp"
    android:layout_gravity="center"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="500dp">

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/login4"
        android:src="@drawable/adonis"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"/>
    <ImageView
        android:layout_width="75dp"
        android:id="@+id/login3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login4"
        android:src="@drawable/login_txt"
        android:layout_centerHorizontal="true"
        android:layout_height="35dp"/>
    <EditText
        android:layout_width="225dp"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        android:hint="Email or username"
        android:height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_bg"
        android:elevation="5dp"
        android:layout_below="@id/login3"
        android:id="@+id/login1"
        android:padding="7dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_width="225dp"
        android:hint="Password"
        android:id="@+id/login2"
        android:inputType="textPassword"
        android:layout_below="@id/login1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_bg"
        android:elevation="5dp"
        android:textSize="15dp"
        android:padding="7dp"
        android:layout_height="40dp"/>
    <Button
        android:layout_width="90dp"
        android:layout_below="@+id/login2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/login5"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Log In"
        android:textColor="#ffff"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="225dp"
        android:layout_below="@id/login5"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="160dp"
            android:text="Don't have an account?"
            android:paddingTop="10dp"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="65dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:text="Sign up"
            android:id="@+id/login6"
            android:textColor="#4DAAEC"
            android:textSize="14dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    </RelativeLayout>




</RelativeLayout>

