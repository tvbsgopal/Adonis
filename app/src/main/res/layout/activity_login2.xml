<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".Login2Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="500dp">
        <ImageView
            android:layout_width="150dp"
            android:src="@drawable/adonis"
            android:id="@+id/login11"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_below="@id/login11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/login12"
            android:src="@drawable/login_txt"
            android:layout_height="35dp"/>
        <LinearLayout
            android:layout_width="225dp"
            android:layout_below="@id/login12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_bg"
            android:elevation="5dp"
            android:id="@+id/login13"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="40dp">
            <com.hbb20.CountryCodePicker
                android:layout_width="0dp"
                android:layout_weight="1"
                app:ccp_autoDetectCountry="true"
                app:ccp_textSize="14sp"
                android:background="@drawable/text_bg"
                app:ccp_showFlag="false"
                app:ccp_showNameCode="false"
                app:ccpDialog_showNameCode="true"
                android:layout_height="match_parent"/>
            <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="Mobile Number"
            android:inputType="phone"

            android:textSize="14sp"
            android:padding="10dp"
            android:background="@drawable/text_bg"
            android:layout_height="match_parent"/>

        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:background="@drawable/button_bg"
            android:text="Send OTP"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:id="@+id/login14"
            android:layout_below="@id/login13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_height="40dp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_below="@id/login14"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_bg"
            android:inputType="phone"
            android:id="@+id/login15"
            android:hint="OTP"

            android:textAlignment="center"
            android:textColor="#040000"
            android:layout_marginTop="25dp"
            android:layout_height="40dp"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/login15"
            android:id="@+id/login16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Verify"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:background="@drawable/button_bg" />

        <TextView
            android:id="@+id/login17"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Register with Email" />

    </RelativeLayout>




</RelativeLayout>
