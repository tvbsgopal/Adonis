<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"

    android:layout_height="match_parent"

    tools:context=".RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="500dp">

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/register1"
            android:src="@drawable/adonis"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_width="75dp"
            android:id="@+id/register2"
            android:src="@drawable/register_txt"
            android:layout_below="@id/register1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="35dp"/>
        <EditText
            android:layout_width="225dp"
            android:hint="Name"
            android:layout_below="@id/register2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/text_bg"
            android:elevation="5dp"
            android:padding="7dp"
            android:id="@+id/register3"
            android:layout_height="40dp"/>
        <EditText
            android:layout_width="225dp"
            android:hint="Email address"
            android:layout_below="@id/register3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/text_bg"
            android:elevation="5dp"
            android:padding="7dp"
            android:id="@+id/register4"
            android:layout_height="40dp"/>
        <EditText
            android:layout_width="225dp"
            android:hint="Username"
            android:layout_below="@id/register4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/text_bg"
            android:elevation="5dp"
            android:padding="7dp"
            android:id="@+id/register5"
            android:layout_height="40dp"/>
        <EditText
            android:layout_width="225dp"
            android:hint="Password"
            android:layout_below="@id/register5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:inputType="textPassword"
            android:background="@drawable/text_bg"
            android:elevation="5dp"
            android:padding="7dp"
            android:id="@+id/register6"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="225dp"
            android:id="@+id/register7"
            android:layout_below="@id/register6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <CheckBox
                android:layout_width="130dp"
                android:text="Remember me"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="90dp"
                android:background="@drawable/button_bg"
                android:textColor="#ffff"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:text="Register with Phone Number"
            android:padding="10dp"
            android:textSize="16sp"
            android:id="@+id/register8"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

    </RelativeLayout>






</RelativeLayout>

